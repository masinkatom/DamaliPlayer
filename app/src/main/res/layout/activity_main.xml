<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cervena"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:fontFamily="@font/aldrich"
        android:gravity="center|center_vertical"
        android:paddingTop="10dp"
        android:text="DAMALI PLAYER"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Kustomizacia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Výber zoznamu"
            android:textColor="@color/biela"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sortButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:drawableEnd="@drawable/ic_sort_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ColorPicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:orientation="horizontal">

        <Button
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cervena"
            android:fontFamily="serif"
            android:onClick="redTheme"
            android:shadowColor="@color/biela"
            android:text="Červená"
            android:textColor="@color/biela"
            android:textSize="17sp" />

        <Button
            android:id="@+id/blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/modra"
            android:fontFamily="serif"
            android:onClick="blueTheme"
            android:shadowColor="@color/biela"
            android:text="Modrá"
            android:textColor="@color/biela"
            android:textSize="17sp" />

        <Button
            android:id="@+id/grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/siva"
            android:fontFamily="serif"
            android:onClick="greyTheme"
            android:shadowColor="@color/biela"
            android:text="Sivá"
            android:textColor="@color/biela"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/ZoznamNahravok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Zoznam Nahráviek"
        android:textColor="@color/biela"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/songList"
        android:layout_width="385dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.4"
        android:cacheColorHint="@color/biela"
        android:dividerHeight="15dp" />



</LinearLayout>